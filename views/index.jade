
if error
    p error

form
    table
        tr
            td(colspan="2")
                h2 Order
        tr
            td Price:
            td
                select
                    option(value="USD") USD
                    option(value="EUR") EUR
        tr
            td Full Name:
            td
                input(type="text")
        tr
            td(colspan="2")
                br
                h2 Payment
        tr
            td Name on credit card:
            td
                input(type="text")
        tr
            td Credit card number:
            td
                input(type="text")
        tr
            td Credit card expiration date:
            td
                select
                    option(value="04/15") 04/15
        tr
            td Credit card CCV:
            td
                input(type="text")
    input(type="submit")
